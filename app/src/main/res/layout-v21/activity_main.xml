<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_showMap"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="right|top"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_round"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/show_map"
            android:textColor="#FFFFFF"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/btn_panic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:stateListAnimator="@animator/button_state_list_animator"
            android:text="@string/panic_help_me"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:ignore="RtlHardcoded" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_around"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/tv_labellat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/lat"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_labellon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/lon"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_labelaltitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/altitude"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_labelaccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/accuracy"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_labelspeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/speed"
                    android:textSize="20sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/tv_lat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/_0"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_lon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/_0"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_altitude"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/_0"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/_0"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="@string/_0"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_around"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lbladdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:text="@string/address"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/emptyText"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />


            <TextView
                android:id="@+id/tv_labelsensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:text="@string/sensor"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <TextView

                android:id="@+id/tv_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/cell_tower_wifi"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_locationsupdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:text="@string/location_updates"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />

            <TextView

                android:id="@+id/tv_labelupdates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/updates"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/off"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sw_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:text="@string/gps_savepower"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="2dp">


            <Button
                android:id="@+id/btn_sendData"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_round"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/send_data"
                android:textColor="#FFFFFF"
                tools:ignore="ButtonStyle,UsingOnClickInXml" />

            <Button
                android:id="@+id/btnfetch"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/btn_round"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/get_my_information"
                android:textColor="#FFFFFF"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_generate"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_round"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/generate_my_qr_code"
                android:textColor="#FFFFFF"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_around"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/tv_result"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="@string/emptyText"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/acceleration_sum"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/acceleration_sum"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/jump"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/jump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/_0"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/fall"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/fall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="16dp"
                android:paddingLeft="32dp"
                android:text="@string/_0"
                android:textSize="18sp"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/border_around"
            android:orientation="vertical"
            android:textAlignment="center">

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="388dp"
                tools:ignore="NestedScrolling" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>

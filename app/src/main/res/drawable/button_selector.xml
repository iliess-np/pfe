<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:right="15dp"
                android:top="15dp">
                <shape>
                    <corners
                        android:radius="200dp" />
                    <solid
                        android:color="#D6D6D6" />
                </shape>
            </item>
            <item
                android:bottom="2dp"
                android:left="2dp">
                <shape>
                    <gradient
                        android:angle="200"
                        android:endColor="#83EC5120"
                        android:startColor="#EC5120" />
                    <stroke
                        android:width="3dp"
                        android:color="#BABABA" />
                    <corners
                        android:radius="200dp" />
                    <padding
                        android:bottom="10dp"
                        android:left="10dp"
                        android:right="10dp"
                        android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
